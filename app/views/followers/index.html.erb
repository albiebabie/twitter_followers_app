<% if current_user %>
  <div class="page-header">
    <h1>Hi <%= current_user.name %>, here are your Twitter Followers:</h1>
  </div>
  <div class="panel panel-default">
    <div class="panel-body">
      <ul>
        <% @display_followers.each do |follower| %>
          <li><%= follower.name %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% else %>
  Please sign in to see your followers!
<% end %>
